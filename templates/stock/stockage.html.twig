{% extends 'base.html.twig' %}

{% block title %}Stockage{% endblock %}

{% block body %}
    <div class="container container2">
        <h1> Stocks des équipements</h1>

        <table class="table">
  <thead class="thead-dark">
  {% for stock in stocks %}
    <tr>
      <th scope="col">1</th>
      <th scope="col">Equipement</th>
      <th scope="col">Nombre</th>
      <th scope="col">Stockage</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">2</th>
      <td>Chasuble</td>
        <td>{{ stock.chasuble }}</td>
        <td>{{ stock.id }}</td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td>Ballon</td>
      <td>{{ stock.ballon }}</td>
    </tr>
    <tr>
      <th scope="row">4</th>
      <td>Plot</td>
      <td>{{ stock.plot }}</td>
    </tr>
    <tr>
      <th scope="col">5</th>
      <td>Barre</td>
      <td>{{ stock.barre }}</td>
    </tr>
    <tr>
      <th scope="row">6</th>
      <td>Mini_plot</td>
      <td>{{ stock.miniPlot }}</td>
    </tr>
    <tr>
      <th scope="row">7</th>
      <td>Maillot</td>
      <td>{{ stock.maillot }}</td>
    </tr>
    <tr>
      <th scope="row">8</th>
      <td>Short</td>
      <td>{{ stock.short }}</td>
    </tr>
    <tr>
      <th scope="row">9</th>
      <td>Sifflet</td>
      <td>{{ stock.sifflet }}</td>
    </tr>
  </tbody>

  
</table>
        <table class="table">
            <thead>        
              <th>actions</th>
                    <td>
                        <a class="btn btn-danger" href="{{ path('afficher', {'id': stock.id}) }}">Afficher</a>
                        <a class="btn btn-secondary" href="{{ path('edition', {'id': stock.id}) }}">Modifier</a>
                        <a class="btn btn-success" href="{{ path('nouveau') }}">Nouvelle commande de stock</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan>Aucune page trouvée,</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
